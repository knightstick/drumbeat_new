<% provide(:title, "Log In") %>
<h1>Log In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag login_path do %>
      <%= label_tag :email %>
      <%= text_field_tag :email %><br />
      
      <%= label_tag :password %>
      <%= password_field_tag :password %><br />
      
      <%= submit_tag "Log in", class: "btn btn-primary" %>
    <% end %>
    
  </div>
</div>
