<% if current_user.no_scores? %>
	<div class="center">
    <p>You've not set any scores yet.</p>
    <%= form_tag scorecards_path(timeframe: 'daily'), method: :post do %>
      <%= submit_tag "Get a new daily exercise", class: "btn btn-default" %>
    <% end %>
      <%= link_to "browse all exercises", exercises_path, class: "btn btn-default" %>.
  </div>
<% else %>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
              <th>Exercise</th>
              <th>4 bars</th>
              <th>60 seconds</th>
              <th>5 minutes</th>
            </tr>
        </thead>
        <tbody>
        	<% @scorecards.each do |scorecard| %>
                <% unless scorecard.score4.nil? && scorecard.score60.nil? && scorecard.score5.nil? %>
                	<tr>
                		<td><%= link_to scorecard.exercise.name, exercise_path(scorecard.exercise) %></td>
                		<td><%= dash_nils scorecard.score4 %></td>
                		<td><%= dash_nils scorecard.score60 %></td>
                		<td><%= dash_nils scorecard.score5 %></td>
            		</tr>
                <%end %>
    		<% end %>
    	</tbody>
    </table>
</div>
<% end %>

